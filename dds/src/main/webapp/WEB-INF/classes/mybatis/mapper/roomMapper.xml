<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fly.dds.mapper.roomMapper">

	<sql id="where-list">
		<choose>
			<when test="schType == 'all' ">
				( INSTR(subject, #{kwd}) &gt; 0
				    OR  DBMS_LOB.INSTR(content, #{kwd}) &gt; 0 )
			</when>
			<when test="schType == 'reg_date' ">
				( TO_CHAR(reg_date, 'YYYYMMDD') = #{kwd} 
					OR TO_CHAR(reg_date, 'YYYY-MM-DD') = #{kwd} )
			</when>
			<when test="schType == 'content' ">
				DBMS_LOB.INSTR(content, #{kwd}) &gt; 0 
			</when>
			<otherwise>
				INSTR(subject, #{kwd}) &gt; 0
			</otherwise>
		</choose>
	</sql>

	<!-- 글개수 -->
	<select id="dataCount" parameterType="map" resultType="Integer">
		SELECT NVL(COUNT(*), 0)
		FROM room r
		<where>
			<if test="kwd != null and kwd != '' ">
				<include refid="where-list"/>
			</if>
		</where>
	</select>
	
	<!-- 글리스트 -->
	<select id="listRoom" parameterType="map"
			resultType="com.fly.dds.domain.Room">
		SELECT num , subject , addr1 , addr2 , room_type
		FROM room r
		<where>
			<if test="kwd != null and kwd != '' ">
				<include refid="where-list"/>
			</if>
		</where>
		ORDER BY num DESC
		OFFSET #{offset} ROWS FETCH FIRST #{size} ROWS ONLY		
	</select>
	
	
	<!-- 숙소 검색 -->
	<!-- public List<Room> searchRoom(String kwd, String sdate, String edate, int people);  -->
	<select id="searchRoom" parameterType="map" resultType="com.fly.dds.domain.Room">
		SELECT r.num, r.subject, r.addr1, r.addr2, r.room_type, NVL(AVG(rr.rating), 0) AS avg_rating, NVL(COUNT(rr.review_num), 0) AS review_count, 
				MIN(d.price) AS min_price, r.facility_content AS facilities, r.key_value AS keywords
		FROM room r
		JOIN room_detail d ON r.num = d.num
		LEFT OUTER JOIN room_review rr ON r.num = rr.num
		
		WHERE INSTR(r.subject, #{kwd} ) > 0
		 AND d.people &gt;= #{people}
		<where>
			<!--  
			  <if test="sdate != null and sdate != '' ">
          	  AND d.start_date &gt;= #{sdate}
        	</if>
        	<if test="edate != null and edate != '' ">
           	 AND d.end_date &lt;= #{edate}
        	</if>
        	<if test="subject != null and subject > 0">
        		
        	</if>
 
        	
        	<if test="people != null and people > 0">
           	 AND d.people &gt;= #{people}
      		</if>
      		-->
		</where>
		GROUP BY r.num, r.subject, r.addr1, r.addr2, r.room_type, r.facility_content, r.key_value
		ORDER BY min_price DESC
	</select>
	
</mapper>